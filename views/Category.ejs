<%- include('./partials/Head.ejs') %> <%- include('./partials/Header.ejs') %>

<div class="row">
  <div class="container">
    <h1 class="text-center">Categorias</h1>
  </div>
</div>
<div class="row">
  <div class="container w-100">
    <form class="">
      <div class="form-group form-inline d-flex justify-content-around">
        <div>
          <select
            class="form-select form-select-sm"
            aria-label=".form-select-sm example"
          >
            <option selected>DISCIPLINA</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
          </select>
        </div>
        <div>
          <select
            class="form-select form-select-sm"
            aria-label=".form-select-sm example"
          >
            <option selected>NIVEL</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
          </select>
        </div>
        <div>
          <select
            class="form-select form-select-sm"
            aria-label=".form-select-sm example"
          >
            <option selected>RANGO DE EDADES</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
          </select>
        </div>
        <div>
          <select
            class="form-select form-select-sm"
            aria-label=".form-select-sm example"
          >
            <option selected>RANGO</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
          </select>
        </div>
        <div>
          <select
            class="form-select form-select-sm"
            aria-label=".form-select-sm example"
          >
            <option selected>GENERO</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
          </select>
        </div>
        <div>
          <select
            class="form-select form-select-sm"
            aria-label=".form-select-sm example"
          >
            <option selected>ARMAS</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
          </select>
        </div>
      </div>
      <div class="form-group text-center">
        <label for="descripcion">Descripción</label>
        <textarea
          class="form-control"
          id="descripcion"
          width="200"
          rows="3"
        ></textarea>
      </div>
      <div class="text-center">
        <h1>Detalles</h1>
      </div>
      <div class="d-flex justify-content-center">
        <div class="form-group detail-kind">
          <select
            class="form-select form-select-sm"
            aria-label=".form-select-sm example"
          >
            <option selected>TIPO</option>
            <option value="1">Tin tipo</option>
            <option value="2">KATAS</option>
            <option value="3">BO</option>
            <option value="4">SAI</option>
            <option value="5">TONFA</option>
            <option value="6">NUNCHAK</option>
          </select>
        </div>
        <div class="form-group">
          <label for="name">Nombre</label>
          <input
            type="text"
            class="form-control"
            id="name"
            aria-describedby="nameHelp"
            placeholder="Nombre"
          />
        </div>
      </div>
      <div class="form-group text-center">
        <label for="descripcioncategoria">Descripción de categoria</label>
        <textarea
          class="form-control"
          id="descripcioncategoria"
          width="200"
          rows="3"
        ></textarea>
      </div>
      <div class="d-flex justify-content-center">
        <button class="btn btn-success">
          Crear
        </button>
      </div>
    </form>
  </div>
</div>

<%- include("./partials/Footer.ejs") %>
